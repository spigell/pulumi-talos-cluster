{
    "name": "talos-cluster",
    "description": "Create and manage Talos kubernetes cluster",
    "keywords": [
        "pulumi",
        "talos",
        "category/infrastructure",
        "kind/component",
        "kubernetes"
    ],
    "license": "Apache-2.0",
    "repository": "https://github.com/spigell/pulumi-talos-cluster",
    "pluginDownloadURL": "github://api.github.com/spigell/pulumi-talos-cluster",
    "publisher": "spigell",
    "language": {
        "csharp": {
            "packageReferences": {
                "Pulumi": "3.*",
                "Pulumi.Command": "1.1.0"
            }
        },
        "go": {
            "generateResourceContainerTypes": true,
            "importBasePath": "github.com/spigell/pulumi-talos-cluster/sdk/go/talos-cluster"
        },
        "nodejs": {
            "dependencies": {
                "@pulumi/command": "v1.1.0",
                "@pulumi/pulumi": "^3.0.0",
                "@pulumiverse/talos": "v0.6.0"
            },
            "devDependencies": {
                "@types/node": "^20.0.0",
                "typescript": "^4.3.5"
            },
            "packageName": "@spigell/pulumi-talos-cluster"
        },
        "python": {
            "liftSingleValueMethodReturns": true,
            "pyproject": {
                "enabled": true
            },
            "requires": {
                "pulumi": "\u003e=3.0.0,\u003c4.0.0",
                "pulumi-command": "1.1.0",
                "pulumiverse-talos": "0.6.0"
            },
            "usesIOClasses": true
        }
    },
    "config": {},
    "types": {
        "talos-cluster:index:applyMachines": {
            "properties": {
                "controlplane": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "#types/talos-cluster:index:machineInfo"
                    }
                },
                "init": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "#types/talos-cluster:index:machineInfo"
                    }
                },
                "worker": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "#types/talos-cluster:index:machineInfo"
                    }
                }
            },
            "type": "object",
            "required": [
                "init"
            ]
        },
        "talos-cluster:index:clientConfiguration": {
            "properties": {
                "caCertificate": {
                    "type": "string",
                    "description": "The Certificate Authority (CA) certificate used to verify connections to the Talos API server."
                },
                "clientCertificate": {
                    "type": "string",
                    "description": "The client certificate used to authenticate to the Talos API server."
                },
                "clientKey": {
                    "type": "string",
                    "description": "The private key for the client certificate, used for authenticating the client to the Talos API server."
                }
            },
            "type": "object"
        },
        "talos-cluster:index:clusterMachines": {
            "properties": {
                "configPatches": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "User-provided machine configuration to apply. \nMust be a valid array of YAML strings. \nFor structure, see https://www.talos.dev/latest/reference/configuration/v1alpha1/config/"
                },
                "machineId": {
                    "type": "string",
                    "plain": true,
                    "description": "ID or name of the machine."
                },
                "machineType": {
                    "type": "enum",
                    "$ref": "#types/talos-cluster:index:machineTypes",
                    "plain": true,
                    "description": "Type of the machine."
                },
                "nodeIp": {
                    "type": "string",
                    "description": "The IP address of the node where configuration will be applied."
                },
                "talosImage": {
                    "type": "string",
                    "description": "Talos OS installation image. \nUsed in the `install` configuration and set via CLI. \nThe default is generated based on the Talos machinery version, current: ghcr.io/siderolabs/installer:v1.11.0.",
                    "default": "ghcr.io/siderolabs/installer:v1.11.0"
                }
            },
            "type": "object",
            "required": [
                "machineType",
                "machineId",
                "nodeIp"
            ]
        },
        "talos-cluster:index:credentials": {
            "properties": {
                "kubeconfig": {
                    "type": "string",
                    "description": "The Kubeconfig for cluster"
                },
                "talosconfig": {
                    "type": "string",
                    "description": "The talosconfig with all nodes and controlplanes as endpoints"
                }
            },
            "type": "object",
            "required": [
                "kubeconfig",
                "talosconfig"
            ]
        },
        "talos-cluster:index:machineInfo": {
            "properties": {
                "clusterEndpoint": {
                    "type": "string",
                    "description": "cluster endpoint applied to node"
                },
                "configuration": {
                    "type": "string",
                    "description": "Configuration settings for machines to apply. \nThis can be retrieved from the cluster resource."
                },
                "kubernetesVersion": {
                    "type": "string",
                    "description": "Kubernetes version to install or upgrade on the node."
                },
                "machineId": {
                    "type": "string",
                    "description": "ID or name of the machine."
                },
                "nodeIp": {
                    "type": "string",
                    "description": "The IP address of the node where configuration will be applied."
                },
                "talosImage": {
                    "type": "string",
                    "description": "Talos OS image to install or upgrade on the node."
                },
                "userConfigPatches": {
                    "type": "string",
                    "description": "User-provided machine configuration to apply. \nThis can be retrieved from the cluster resource."
                }
            },
            "type": "object",
            "required": [
                "machineId",
                "nodeIp",
                "configuration"
            ]
        },
        "talos-cluster:index:machineTypes": {
            "description": "Allowed machine types",
            "type": "string",
            "plain": [
                "controlplane",
                "worker",
                "init"
            ],
            "enum": [
                {
                    "value": "controlplane"
                },
                {
                    "value": "worker"
                },
                {
                    "value": "init"
                }
            ]
        }
    },
    "provider": {},
    "resources": {
        "talos-cluster:index:Apply": {
            "description": "Apply the configuration to nodes.",
            "properties": {
                "credentials": {
                    "type": "object",
                    "$ref": "#types/talos-cluster:index:credentials"
                }
            },
            "required": [
                "credentials"
            ],
            "inputProperties": {
                "applyMachines": {
                    "type": "object",
                    "$ref": "#types/talos-cluster:index:applyMachines",
                    "description": "The machine configurations to apply."
                },
                "clientConfiguration": {
                    "type": "object",
                    "$ref": "#types/talos-cluster:index:clientConfiguration",
                    "description": "Client configuration for bootstrapping and applying resources."
                },
                "skipInitApply": {
                    "type": "boolean",
                    "description": "skipInitApply indicates that machines will be managed or configured by external tools. \nFor example, it can serve as a source for userdata in cloud provider setups. \nThis option helps accelerate node provisioning. \nNote: init node is always applied. \nDefault is false.",
                    "default": false
                }
            },
            "requiredInputs": [
                "applyMachines",
                "clientConfiguration"
            ],
            "isComponent": true
        },
        "talos-cluster:index:Cluster": {
            "description": "Initialize a new Talos cluster: \n- Creates secrets \n- Generates machine configurations for all nodes",
            "properties": {
                "clientConfiguration": {
                    "type": "object",
                    "$ref": "#types/talos-cluster:index:clientConfiguration",
                    "description": "Client configuration for bootstrapping and applying resources."
                },
                "generatedConfigurations": {
                    "type": "object",
                    "description": "Generated machine configuration YAML keyed by machine ID."
                },
                "machines": {
                    "type": "object",
                    "$ref": "#types/talos-cluster:index:applyMachines",
                    "description": "Machine information grouped by machine type."
                }
            },
            "required": [
                "machines",
                "generatedConfigurations",
                "clientConfiguration"
            ],
            "inputProperties": {
                "clusterEndpoint": {
                    "type": "string",
                    "description": "Cluster endpoint, the Kubernetes API endpoint accessible by all nodes"
                },
                "clusterMachines": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "$ref": "#types/talos-cluster:index:clusterMachines"
                    },
                    "description": "Configuration settings for machines"
                },
                "clusterName": {
                    "type": "string",
                    "plain": true,
                    "description": "Name of the cluster"
                },
                "kubernetesVersion": {
                    "type": "string",
                    "description": "Kubernetes version to install. \nDefault is v1.33.0.",
                    "default": "v1.33.0"
                },
                "talosVersionContract": {
                    "type": "string",
                    "description": "Version of Talos features used for configuration generation. \nDo not confuse this with the talosImage property. \nUsed in NewSecrets() and GetConfigurationOutput() resources. \nThis property is immutable to prevent version conflicts across provider updates. \nSee issue: https://github.com/siderolabs/terraform-provider-talos/issues/168 \nThe default value is based on gendata.VersionTag, current: v1.11.0.",
                    "default": "v1.11.0"
                }
            },
            "requiredInputs": [
                "clusterName",
                "clusterEndpoint",
                "clusterMachines"
            ],
            "isComponent": true
        }
    }
}